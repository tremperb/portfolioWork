{{> header}}

<main class="content">

  <section class="new-container">
    <div class="name-container">
      <h2 class="my-name"><u><em>Book A Trip</em></u></h2>
      <h4> <em> For exact info about this page see "Book A Trip" on the homepage. </em> </h4>

      <div class="info-container">
        <h4> Participant Information </h4>
        <form action="/bookTrip" method="POST">
          <div class="participant-container">
            <label for="fname">First name: </label><input type="text" id="fname" name="fnameInput"><br><br>
            <label for="fname">Last name: </label><input type="text" id="lname" name="lnameInput"><br><br>
            <label for="fname">Email: </label><input type="email" id="email" name="emailInput"><br><br>
            <label for="fname">Age: </label><input type="number" id="age" name="ageInput"><br><br>
            <label for="fname">Phone: </label><input type="phone" id="phone" name="phoneInput"><br><br>
          </div>
          <div class="trip-container">
            <h4> Please Select Your Trip </h4>
            <select name="tripInput">
              <option selected value="">Please Select A Trip</option>
              {{#each tripOption}}
              <option value="{{tripID}}">{{tripID}} - {{tripType}} - {{destination}}</option>
              {{/each}}
            </select>
            <br> <br>
          </div>
          <h4> Would you like to create a packing list? </h4>
          <input type="checkbox" id="myCheck" onclick="getPackingList()" name="checkedInput">Yes</input>

          <div class="taking-container" id="taking-list" style="display:none;">
            <h4> What Do You Plan on Taking? </h4>
            <label for="fname">Trip Equipment: </label><input type="text" id="fname" name="equipmentInput"><br><br>
            <label for="fname">Clothing: </label><input type="text" id="lname" name="clothingInput"><br><br>
            <label for="fname">Water Amount: </label><input type="number" id="email" name="waterInput"><br><br>
            <label for="fname">Food Meals Amount: </label><input type="number" id="age" name="mealsInput"><br><br>
          </div>

          <br> <br> <input type="submit" value="Submit"> <br> <br>
        </form>
      </div>
    </div>
  </section>

</main>
